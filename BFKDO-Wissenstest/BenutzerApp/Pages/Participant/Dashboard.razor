@page "/participant/dashboard"
@using Common.Enums;
@using Common.Models;

<MudExpansionPanels>

    @foreach (var level in _data)
    {
        <MudExpansionPanel Text="@level.Name" Disabled="@level.Disabled">

            <MudDataGrid T="ModelExaminationResult" Items="@level.Results">
                <Columns>
                    <PropertyColumn Property="x => x.Name"></PropertyColumn>
                    <TemplateColumn>
                        <CellTemplate>
                            <MudStack>
                                @{
                                    var result = context.Item;
                                }
                                @switch (result.Evaluation)
                                {
                                    case EnumEvaluation.Ungraded:
                                        <MudChip Text="blue" Variant="Variant.Text" Color="Color.Info">Unbenotet</MudChip>
                                        break;
                                    case EnumEvaluation.Passed:
                                        <MudChip Text="green" Variant="Variant.Text" Color="Color.Success">Bestanden</MudChip>
                                        break;
                                    case EnumEvaluation.Failed:
                                        <MudChip Text="red" Variant="Variant.Text" Color="Color.Error">Nicht bestanden</MudChip>
                                        break;
                                    default:
                                        <MudChip Text="red" Variant="Variant.Text" Color="Color.Error">Benotung nicht gefunden</MudChip>
                                        break;
                                }
                            </MudStack>
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>
            </MudDataGrid>
        </MudExpansionPanel>
    }

</MudExpansionPanels>

