@page "/authevaluator"

@inject NavigationManager NavigationManager
@inject ISnackbar MudSnackbar

<div class="container">
    <div class="login">
        <h3>Willkommen beim Wissenstest!</h3>
        <br />
        <h3><i>Zugang für Bewerter</i></h3>

        <MudTextField @bind-Value="@Password" Style="width: 400px;" Label="Passwort" Required="true" Variant="Variant.Filled" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ShowPassword" AdornmentAriaLabel="Show Password" />
        <br />
        <MudButton Disabled="@Processing" Variant="Variant.Filled" Color="Color.Primary" @onclick="Login">
            @if (Processing)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Einloggen...</MudText>
            }
            else
            {
                <MudText>Login</MudText>
            }
        </MudButton>

        <ScanHelper QRCodeScanned="QRScanned"/>
    </div>
</div>