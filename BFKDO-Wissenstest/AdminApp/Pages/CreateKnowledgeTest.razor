@page "/createknowledgetest"
@inject NavigationManager NavigationManager
@inject ISnackbar MudSnackbar
@inherits AuthenticationRazorPage
<div class="container">
    <div class="testanlegen">
        <br />
        <h3>Wissenstest anlegen</h3>
        <br><br>

        <MudTextField @bind-Value="@Year" Style="width: 400px;" Label="Testbezeichnung" Required="true" Variant="Variant.Filled" />
        <br />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="CreateTest" Style="border-radius: 20px; padding-left:20px; padding-right:20px; margin-right:10px;">Speichern</MudButton><MudButton Variant="Variant.Filled" Color="Color.Secondary" Style="border-radius: 20px; padding-left:20px; padding-right:20px;" Href="/dashboard">Abbrechen</MudButton>
    </div>
</div>
