@page "/dashboard"

@inherits AuthenticationRazorPage

<h2>Willkommen, Admin.</h2>
<br />
@if (!DataLoaded)
{
    <MudOverlay Visible="IsVisible" DarkBackground="true" Absolute="true">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    </MudOverlay>
}
<div class="container">
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Style="width:300px; border-radius: 80px" Href="/createknowledgetest">Test anlegen</MudButton>
</div>
<br />
<div class="container">
    <MudDataGrid Items="@_knowledgetests" Striped="@Striped" Style="width:80%">
        <Columns>
            <TemplateColumn Filterable="false" CellStyle="width:50px">
                <CellTemplate>
                    <MudIcon Icon="@Icons.Material.Filled.LocalFireDepartment" Title="Feuer Icon" Size="Size.Large" />
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.Designation" Title="Testbezeichnung"></PropertyColumn>
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudStack Row>
                        <MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary" Style="border-radius: 20px; padding-left:20px; padding-right:20px;" OnClick="()=>NavigateToDetails(context.Item.Id)">Details</MudButton>
                        <MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary" Style="border-radius: 20px; padding-left:20px; padding-right:20px;" OnClick="() => ExportEvaluatorCredentials(context.Item.Id)">Bewerter Export</MudButton>
                        <MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary" Style="border-radius: 20px; padding-left:20px; padding-right:20px;" OnClick="() => ExportParticipantsCredentials(context.Item.Id)">Teilnehmer Export</MudButton>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>
</div>
