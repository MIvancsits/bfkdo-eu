@page "/"

<MudStack Row AlignItems="AlignItems.Center" Class="my-4" Spacing="15">
    <h1 class="m-0" aria-label="Testjahr">Testjahr 2022</h1>
    <MudButton aria-label="Wissenstest bearbeiten" Color="Color.Primary" Variant="Variant.Filled">Wissenstest bearbeiten</MudButton>
    <MudButton aria-label="Pdf exportieren" Color="Color.Error" StartIcon="@Icons.Material.Filled.PictureAsPdf" Variant="Variant.Filled">PDF exportieren</MudButton>
</MudStack>


<MudDataGrid Items="Elements" ColumnResizeMode="ResizeMode.Column">
    <Columns>
        <TemplateColumn>
            <CellTemplate>
                <MudIcon Style="border:3px solid black; border-radius:50%" Icon="@Icons.Material.Filled.Person" />
            </CellTemplate>
        </TemplateColumn>
        <PropertyColumn Property="x => x.Name" />
        <PropertyColumn Property="x => x.Station" />
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row AlignItems="AlignItems.Center">
                    @{
                        var item = context.Item;
                    }
                    <MudStack>
                        @foreach (var result in item.Results)
                        {
                            <label>@result.LevelName</label>
                        }
                    </MudStack>
                    <MudStack>
                        @foreach (var result in item.Results)
                        {
                            <label>@result.LevelResult</label>
                        }
                    </MudStack>
                    <MudButton Size="Size.Medium" Variant="Variant.Filled" Color="Color.Primary">Bearbeiten</MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>



